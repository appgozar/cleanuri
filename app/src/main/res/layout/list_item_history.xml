<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvShortenLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:minHeight="42dp"
        android:gravity="center_vertical"
        android:text="http://cleanuri.com"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        />
    <TextView
        android:id="@+id/tvOriginalLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:lines="1"
        android:drawableLeft="@drawable/ic_arrow_link"
        android:text="http://google.com"
        android:drawableTint="?attr/colorPrimary"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintTop_toBottomOf="@id/tvShortenLink"
        app:layout_constraintRight_toRightOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCopyLink"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_copy_small"
        android:tint="?attr/colorPrimary"
        android:layout_marginRight="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@id/tvShortenLink"
        app:layout_constraintBottom_toBottomOf="@id/tvShortenLink"
        app:layout_constraintRight_toRightOf="parent"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:alpha="0.5"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvOriginalLink"
        />
</androidx.constraintlayout.widget.ConstraintLayout>